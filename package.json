    "lodash": "^4.17.11",
    "socket.io": "^2.2.0",
    "socket.io-redis": "^5.2.0",
    "toml": "^2.3.3",
    "validator": "^10.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "glob": "^7.1.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
